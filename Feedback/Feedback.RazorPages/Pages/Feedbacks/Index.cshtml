@page
@model Feedback.RazorPages.Pages.Feedbacks.Index


@{
    ViewData["Title"] = "Eventos";
}
<td><a asp-page="/Feedbacks/Create">Criar novo Feedbacks</a></td>
<h1>Lista de Feedbacks</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FeedbackList[0].NomeCliente)</th>
            <th>@Html.DisplayNameFor(model => model.FeedbackList[0].EmailCliente)</th>
            <th>@Html.DisplayNameFor(model => model.FeedbackList[0].Comentario)</th>
            <th>@Html.DisplayNameFor(model => model.FeedbackList[0].DataFeedback)</th>
            <th>@Html.DisplayNameFor(model => model.FeedbackList[0].Avaliacao)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventModel in Model.FeedbackList)
        {
            <tr>
                <td>@Html.DisplayFor(model => eventModel.IdFeedback )</td>
                <td>@Html.DisplayFor(model => eventModel.NomeCliente)</td>
                <td>@Html.DisplayFor(model => eventModel.EmailCliente )</td>
                <td>@Html.DisplayFor(model => eventModel.DataFeedback )</td>
                <td>@Html.DisplayFor(model => eventModel.Avaliacao  )</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@eventModel.IdFeedback">Alterar</a>
                    <a asp-page="./Visualizar" asp-route-id="@eventModel.IdFeedback ">Visualizar</a>
                    <a asp-page="./Delete" asp-route-id="@eventModel.IdFeedback ">Deletar</a>
                </td>
            </tr>
        }

    </tbody>
</table>